<div class="user-show-card">

  <!-- User Info -->
  <div class="user-info">
    <div class="user-avatar"><%= @user.name[0].upcase %></div>
    <div>

      <p><strong>Username:</strong> <%= @user.name %></p>
      <% if logged_in? && @user == current_user %>
        <p><strong>Email:</strong> <%= @user.email %></p>
        <%= link_to "✏️ Edit Profile", edit_user_path(@user), class: "action-link edit-link" %>
  <%= link_to "Delete Your Profile", user_path(current_user), 
    data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },class: "action-link delete-link" %>
    


      <% end %>
    </div>
  </div>

  <% if logged_in? && @user == current_user %>
   <h2 class="articles-title">Your Posts</h2>
<% else%>
<h2 class="articles-title"><%=@user.name%>: Posts</h2> 
<%end%>

  <% if @articles.any? %>
    <div class="articles-grid">
      <% @articles.each do |article| %>
        <div class="article-card">
          <h3 class="article-title"><%= article.name %></h3>
          <p class="article-desc"><%= article.description %></p>
          <div class="article-actions">
            <%= link_to "👁 Show", article_path(article), class: "action-link show-link" %>
            <% if logged_in? && article.user == current_user %>
              <%= link_to "✏️ Edit", edit_article_path(article), class: "action-link edit-link" %>
              <%= link_to "🗑 Delete", article_path(article), 
                          data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, 
                          class: "action-link delete-link" %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>No articles found for this user. <%= link_to "➕ Create New Article".html_safe, new_article_path, class: "new-article-link" %></p>
  <% end %>
 <%= link_to "⬅️ Back To All Articles", articles_path, class: "action-link show-link" %>
</div>
