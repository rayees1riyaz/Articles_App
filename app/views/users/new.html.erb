<div style="max-width:500px; margin:50px auto; background:#fff; padding:30px; border-radius:15px; box-shadow:0 10px 25px rgba(0,0,0,0.1);">

  <h1 style="text-align:center; color:#2d3436; margin-bottom:25px; font-weight:bold;">üìù Signup For Articles App</h1>

  <%= form_with model: @user, local: true do |form| %>

    <!-- Username -->
    <div style="margin-bottom:15px;">
      <%= form.label :name, "Username", style:"font-weight:bold; display:block; margin-bottom:5px;" %>
      <%= form.text_field :name, placeholder: "Enter Username", style:"width:100%; padding:10px; border:1px solid #ccc; border-radius:8px;" %>
    </div>

    <% if @user.errors[:name].any? %>
      <div style="color:#e74c3c; font-size:14px; margin-bottom:10px;">
        <ul style="margin:0; padding-left:20px;">
          <li>Name: <%= @user.errors[:name].first %></li>
        </ul>
      </div>
    <% end %>

    <!-- Email -->
    <div style="margin-bottom:15px;">
      <%= form.label :email, style:"font-weight:bold; display:block; margin-bottom:5px;" %>
      <%= form.text_field :email, placeholder: "Enter Your Email", style:"width:100%; padding:10px; border:1px solid #ccc; border-radius:8px;" %>
    </div>

    <% if @user.errors[:email].any? %>
      <div style="color:#e74c3c; font-size:14px; margin-bottom:10px;">
        <ul style="margin:0; padding-left:20px;">
          <li>Email: <%= @user.errors[:email].first %></li>
        </ul>
      </div>
    <% end %>

    <!-- Password -->
    <div style="margin-bottom:15px;">
      <%= form.label :password, style:"font-weight:bold; display:block; margin-bottom:5px;" %>
      <%= form.password_field :password, placeholder: "Enter Password", style:"width:100%; padding:10px; border:1px solid #ccc; border-radius:8px;" %>
    </div>

    <% if @user.errors[:password].any? %>
      <div style="color:#e74c3c; font-size:14px; margin-bottom:10px;">
        <ul style="margin:0; padding-left:20px;">
          <li>Password: <%= @user.errors[:password].first %></li>
        </ul>
      </div>
    <% end %>

    <!-- Confirm Password -->
    <div style="margin-bottom:15px;">
      <%= form.label :password_confirmation, "Confirm Password", style:"font-weight:bold; display:block; margin-bottom:5px;" %>
      <%= form.password_field :password_confirmation, placeholder: "Re-enter Password", style:"width:100%; padding:10px; border:1px solid #ccc; border-radius:8px;" %>
    </div>

    <% if @user.errors[:password_confirmation].any? %>
      <div style="color:#e74c3c; font-size:14px; margin-bottom:10px;">
        <ul style="margin:0; padding-left:20px;">
          <li>Password Confirmation: <%= @user.errors[:password_confirmation].first %></li>
        </ul>
      </div>
    <% end %>

    <!-- Submit & Cancel Buttons -->
    <div style="margin-top:25px; display:flex; justify-content:center; gap:15px;">
      <%= form.submit "Signup", style:"background:#0984e3; color:white; padding:12px 25px; border:none; border-radius:8px; cursor:pointer; font-weight:bold; transition:0.3s;" %>
      <%= link_to "Cancel", articles_path, style:"color:#e74c3c; font-weight:bold; text-decoration:none; padding:12px 25px; border-radius:8px; border:1px solid #e74c3c; transition:0.3s;" %>
    </div>

  <% end %>
</div>
