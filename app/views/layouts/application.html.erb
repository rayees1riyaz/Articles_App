\<!DOCTYPE html>
<html>
<head>
  <title>ArticlesApp</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"/>
</head>
<body>
  <!-- Top Navigation -->
  <header style="background:linear-gradients/new(90deg,#6a11cb,#2575fc); padding:15px 0;">
    <nav style="max-width:1200px; margin:auto; display:flex; justify-content:space-between; align-items:center; padding:0 20px;">
      <h2 style="color:white; margin:0; font-family:'Segoe UI',sans-serif;">ArticlesApp</h2>
      <div>
     
        <%= link_to "<i class='fas fa-plus'></i> New Article".html_safe, new_article_path, style:"color:white; font-weight:bold;" %>
       
      </div>
    </nav>
  </header>

  <main style="max-width:1200px; margin:30px auto; padding:0 15px;">
    <% flash.each do |key, message| %>
      <div class="flash <%= key %>">
        <%= message %>
      </div>
    <% end %>
    <%= yield %>
  </main>
</body>
</html>
