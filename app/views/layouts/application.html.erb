<!DOCTYPE html>
<html>
<head>
  <title>ArticlesApp</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"/>
  <style>
    /* General Body */
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: #f4f6f8;
      margin: 0;
      padding: 0;
    }

    /* Navbar */
    header {
      background: linear-gradient(90deg, #36d1dc, #5b86e5);
      padding: 15px 0;
      box-shadow: 0 4px 15px rgba(0,0,0,0.2);
      position: sticky;
      top: 0;
      z-index: 1000;
    }

    nav {
      max-width: 1200px;
      margin: auto;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0 20px;
    }

    nav h2 {
      color: #fff;
      margin: 0;
      font-size: 28px;
      font-weight: bold;
    }

    .nav-links {
      display: flex;
      gap: 20px;
      flex-wrap: wrap;
    }

    .nav-btn {
      color: #fff;
      text-decoration: none;
      font-weight: bold;
      padding: 8px 18px;
      border-radius: 8px;
      transition: all 0.3s ease;
      background: rgba(255,255,255,0.15);
    }

    .nav-btn:hover {
      background: rgba(255,255,255,0.35);
      transform: translateY(-2px);
    }

    /* Main Content */
    main {
      max-width: 1200px;
      margin: 30px auto;
      padding: 0 20px;
      min-height: 80vh;
    }

    /* Flash Messages -------------------------------------------------- */
    .flash {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 12px;
      padding: 12px 16px;
      border-radius: 10px;
      margin-bottom: 16px;
      font-weight: 700;
      color: #fff;
      box-shadow: 0 6px 18px rgba(0,0,0,0.12);
      overflow: hidden;

      /* entrance animation */
      animation: flashFadeIn 0.32s ease forwards;

      /* transitions used for hiding â€” keep these matched with JS removal delay */
      transition: opacity 0.6s ease, transform 0.6s ease, max-height 0.6s ease, margin 0.6s ease, padding 0.6s ease;
      max-height: 200px; /* enough for a message line */
    }

    .flash.notice { background-color: #36d1dc; }
    .flash.alert  { background-color: #ff416c; }

    .flash__text {
      flex: 1;
      margin-right: 8px;
    }

    .flash__close {
      background: transparent;
      border: none;
      color: rgba(255,255,255,0.95);
      font-size: 18px;
      line-height: 1;
      cursor: pointer;
      padding: 6px;
      border-radius: 6px;
      transition: background 0.15s ease;
    }
    .flash__close:hover { background: rgba(255,255,255,0.08); }

    /* Hidden / hiding state: fade + slide + collapse */
    .flash--hide {
      opacity: 0 !important;
      transform: translateY(-12px) scale(0.995) !important;
      max-height: 0 !important;
      margin: 0 !important;
      padding-top: 0 !important;
      padding-bottom: 0 !important;
    }

    @keyframes flashFadeIn {
      from { opacity: 0; transform: translateY(-8px); }
      to   { opacity: 1; transform: translateY(0); }
    }
    /* ----------------------------------------------------------------- */
    .flash__close {
  background: transparent;
  border: none;
  color: #fff;
  font-size: 28px;     /* ðŸ‘ˆ Bigger symbol */
  font-weight: bold;
  cursor: pointer;
  margin-left: 15px;
  line-height: 1;
  transition: transform 0.2s ease, color 0.2s ease;
}

.flash__close:hover {
  transform: scale(1.3);   /* ðŸ‘ˆ Smooth enlarge on hover */
  color: #000;             /* ðŸ‘ˆ Optional: darker on hover */
}
  </style>
</head>
<body>

  <!-- Top Navigation -->
  <header>
    <nav>
      <h2>ArticlesApp</h2>
      <div class="nav-links">
        <% if logged_in? %>
          <%= link_to "All Articles", articles_path, class: "nav-btn" %>
          <%= link_to "Your Profile", user_path(current_user), class: "nav-btn" %>
          <%= link_to "Logout", logout_path,
              data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "nav-btn" %>
        <% else %>
          <%= link_to "All Articles", articles_path, class: "nav-btn" %>
        <% end %>
      </div>
    </nav>
  </header>

  <!-- Main Content -->
  <main>
    <% flash.each do |key, message| %>
      <div class="flash <%= key %>">
        <div class="flash__text"><%= message %></div>
        <button type="button" class="flash__close" aria-label="Dismiss">&times;</button>
      </div>
    <% end %>

    <%= yield %>
  </main>

  <!-- Smooth auto-dismiss script (works with Turbo & frames) -->
  <script>
    (function() {
      const HIDE_DELAY = 3000;    // ms before starting hide
      const REMOVE_DELAY = 650;   // should be slightly >= CSS transition time (600ms)

      function initFlashBehaviour() {
        const flashes = document.querySelectorAll('.flash');
        if (!flashes.length) return;

        flashes.forEach(flash => {
          // manual close
          const closeBtn = flash.querySelector('.flash__close');
          if (closeBtn) {
            closeBtn.addEventListener('click', () => {
              flash.classList.add('flash--hide');
              setTimeout(() => { if (flash.parentNode) flash.remove(); }, REMOVE_DELAY);
            });
          }

          // auto hide after HIDE_DELAY
          setTimeout(() => {
            // if already removed by manual close, skip
            if (!document.body.contains(flash)) return;
            flash.classList.add('flash--hide');
            setTimeout(() => { if (flash.parentNode) flash.remove(); }, REMOVE_DELAY);
          }, HIDE_DELAY);
        });
      }

      // init on initial load and on Turbo navigations / frame loads
      document.addEventListener('DOMContentLoaded', initFlashBehaviour);
      document.addEventListener('turbo:load', initFlashBehaviour);
      document.addEventListener('turbo:frame-load', initFlashBehaviour);
    })();
  </script>
</body>
</html>

