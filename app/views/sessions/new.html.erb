<h1 class="login-title">Login</h1>

<div class="login-container">
  <%= form_with(scope: :session, url: login_path, local: true, class: "login-form") do |form| %>
    
    <div class="form-group">
      <%= form.label :email %>
      <%= form.email_field :email, class: "form-control", placeholder: "Enter your email" %>
    </div>

    <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field :password, class: "form-control", placeholder: "Enter your password" %>
    </div>

    <div class="form-group">
      <%= form.submit "Login", class: "btn-login" %>
    </div>

  <% end %>
</div>
