<h1>Login</h1>

<%= form_with(scope: :session, url: login_path, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :email %><br>
    <%= form.email_field :email, class: "form-control", placeholder: "Enter your email" %>
  </div>

  <div class="form-group">
    <%= form.label :password %><br>
    <%= form.password_field :password, class: "form-control", placeholder: "Enter your password" %>
  </div>

  <div class="form-group">
    <%= form.submit "Login", class: "btn btn-primary" %>
  </div>
<% end %>
