<div style="max-width:400px; margin:60px auto; background:#fff; padding:30px; border-radius:15px; box-shadow:0 10px 25px rgba(0,0,0,0.1);">

  <h1 style="text-align:center; color:#2d3436; margin-bottom:25px; font-weight:bold;">üîê Login</h1>

  <%= form_with(scope: :session, url: login_path, local: true) do |form| %>

    <!-- Email Field -->
    <div style="margin-bottom:18px;">
      <%= form.label :email, "Email", style:"font-weight:bold; display:block; margin-bottom:5px;" %>
      <%= form.email_field :email, placeholder: "Enter your email", style:"width:100%; padding:10px; border:1px solid #ccc; border-radius:8px;" %>
    </div>

    <!-- Password Field -->
    <div style="margin-bottom:18px;">
      <%= form.label :password, "Password", style:"font-weight:bold; display:block; margin-bottom:5px;" %>
      <%= form.password_field :password, placeholder: "Enter your password", style:"width:100%; padding:10px; border:1px solid #ccc; border-radius:8px;" %>
    </div>

    <!-- Submit Button -->
    <div style="margin-top:20px; text-align:center;">
      <%= form.submit "Login", style:"background:#0984e3; color:white; padding:12px 25px; border:none; border-radius:8px; cursor:pointer; font-weight:bold; transition:0.3s;" %>
    </div>

    <!-- Optional Links -->
    <div style="text-align:center; margin-top:15px;">
      <%= link_to "Forgot Password?", "#", style:"color:#e74c3c; font-weight:bold; text-decoration:none;" %> |
      <%= link_to "Sign Up", new_user_path, style:"color:#27ae60; font-weight:bold; text-decoration:none;" %>
    </div>

  <% end %>
</div>
