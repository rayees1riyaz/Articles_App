<div class="article-show-card">

  <!-- User Info -->
  <% if @article.user %>
    <div class="user-info">
      <div class="user-avatar"><%= @article.user.name[0].upcase %></div>
      <%= link_to @article.user.name, user_path(@article.user), class: "user-link" %>
    </div>
  <% end %>

  <!-- Article Details -->
  <div class="article-content">
    <h1 class="article-title"><%= @article.name %></h1>
    <p class="article-desc"><%= @article.description %></p>
    <p><strong>Article ID:</strong> <%= @article.id %></p>
  </div>

  <!-- Actions -->
  <div class="article-actions">
    <%= link_to "⬅️ Back To All Articles", articles_path, class: "action-link show-link" %>
    <% if logged_in? && @article.user == current_user %>
      <div>
        <%= link_to "✏️ Edit", edit_article_path(@article), class: "action-link edit-link" %>
        <%= link_to "🗑 Delete", article_path(@article), 
                    data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, 
                    class: "action-link delete-link" %>
      </div>
    <% end %>
  </div>

</div>
